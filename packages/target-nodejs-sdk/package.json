{
  "name": "@adobe/target-nodejs-sdk",
  "version": "2.3.0",
  "description": "Adobe Target Node.js SDK, Delivery API client",
  "main": "dist/index.js",
  "browser": "dist/index.browser.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": ">=8.16.0"
  },
  "files": [
    "dist/*.js",
    "src/**/!(*.spec).js",
    "*.md",
    "LICENSE*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run format && npm run lint",
    "build": "NODE_ENV=production rollup -c rollup.config.js",
    "//postbuild": "cp dist/targetclient.browser* demo/assets",
    "www": "npm run build && node ./sample/server.js",
    "pretest": "npm run format && npm run lint",
    "test": "NODE_ENV=development jest",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "lint-src": "./node_modules/.bin/eslint \"src/**/*.{ts,js}\" --fix",
    "lint-test": "./node_modules/.bin/eslint \"test/**/*.{ts,js}\" --fix",
    "//lint": "npm run lint-src && npm run lint-test",
    "lint": "",
    "format": "prettier '**/*.ts' '**/*.js' '**/*.json' --write --config '../../.prettierrc.json' --ignore-path '../../.prettierignore'",
    "prepack": "for file in `cat packfiles.txt`; do cp \"../../$file\" .; done",
    "postpack": "for file in `cat packfiles.txt`; do rm \"$file\"; done",
    "prepublishOnly": "echo //${NPM_REGISTRY}/:_authToken=${NPM_AUTH_TOKEN} > .npmrc",
    "prepare": "rollup --config"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adobe/target-nodejs-sdk.git"
  },
  "keywords": [
    "NodeJS",
    "Server",
    "API",
    "Adobe",
    "Target",
    "MCID",
    "Visitor",
    "Delivery"
  ],
  "author": "Adobe Systems Inc.",
  "license": "Apache-2.0",
  "devDependencies": {
    "@adobe/target-decisioning-engine": "^1.8.0",
    "@adobe/target-tools": "^1.6.0",
    "ajv": "^5.5.2",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "mockdate": "^2.0.5",
    "nyc": "^14.1.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1"
  },
  "dependencies": {
    "@adobe-mcid/visitor-js-server": "^2.0.0",
    "fast-text-encoding": "^1.0.3",
    "form-data": "^3.0.0",
    "http-status-codes": "^1.4.0",
    "whatwg-fetch": "^3.0.0"
  }
}
